<h1>Upload a file</h1>

<%= form_tag uploads_path, enctype: 'multipart/form-data' do %>
<div class="control-group">
        <div class="controls">
		  <%= file_field_tag :file  %>
		</div>
</div>  
<div class="form-actions">
  <%= submit_tag 'Upload file', :class => 'btn btn-primary' %>
</div>
<% end %>
