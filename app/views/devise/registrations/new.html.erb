
<div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="row">
        <div class="col-md-6 col-sm-8 col-xs-11">
            <h3>Please Register<small>&nbsp;&nbsp;It's free and always</small></h3>   
            <hr class="colorgraph">           
        </div>
    </div>
   
    

    <div class="row">
      <div class="col-md-4 col-sm-6 col-xs-7">
        <div class="form-group"> 
         <%= f.label :email,:class => 'control-label' %> 
         <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
         <p class="help-block">Please provide your email</p>
       </div>
     </div>
   </div>
  <div class="row">
    <div class="col-md-4 col-sm-6 col-xs-7">
      <div class="form-group"> 
        <%= f.label :password,:class => 'control-label' %>      
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
        <p class="help-block">Password should be at least 8 characters</p>    
      </div>
    </div>
  </div>
 
  <div class="row">
    <div class="col-md-4 col-sm-6 col-xs-7">
     <div class="form-group"> 
      <%= f.label :password_confirmation,:class => 'control-label' %>   
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
      <p class="help-block">Please confirm password</p>  
      </div>
    </div>
  </div>
  <div class="row">
        <div class="col-xs-4 col-sm-3 col-md-2">  
  <button type="submit" value="Send" id="submit" class="btn btn-primary btn-lg">Sign Up</button>
</div>
 <div class="col-xs-4 col-sm-3 col-md-2 ">  
  <a href="sign_in" class="btn btn-success btn-lg">Sign In</a>
</div>
</div>
<% end %>

</div>
</div>
</div>



